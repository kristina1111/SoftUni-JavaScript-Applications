<section id="viewSendMessage">
    <h1>Send Message</h1>
    <form id="formSendMessage" method="POST" action="#/sendMessage">
        <div>Recipient:</div>
        <div>
            <select name="recipientUsername" required id="msgRecipientUsername">
                {{#each users}}
                    <option value="{{username}}">{{username}}{{#if name}} ({{name}}){{/if}}</option>
                {{/each}}
            </select>
        </div>
        <div>Message Text:</div>
        <div><input type="text" name="text" required id="msgText"/></div>
        <div><input type="submit" value="Send"/></div>
    </form>
</section>