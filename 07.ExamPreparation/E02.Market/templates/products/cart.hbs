<section id="viewCart">
    <h1>My Cart</h1>
    <div class="products" id="cartProducts">
        {{#isEmptyObject products}}
            <table>
                <thead>
                <tr>
                    <th></th>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each products}}
                    <tr>
                        <td><img src="{{product.imageUrl}}" alt=""></td>
                        <td>{{product.name}}</td>
                        <td>{{product.description}}</td>
                        <td>{{quantity}}</td>
                        <td>{{formatMoney "2" "," (calculate quantity "*" product.price)}}</td>
                        <td>
                            <button data-id="{{@key}}">Discard</button>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>You haven't bought any products yet! It's time to shop!</p>
        {{/isEmptyObject}}
    </div>
</section>